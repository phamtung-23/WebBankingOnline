</head>
<body>
  <div class="row">
    <div class="col-lg-4 col-sm-12 p-5">
      <div class="main-container">
        <div class="heading">
          <h1 class="heading__title">THẺ ĐÃ LIÊN KẾT</h1>
          <p class="heading__credits"><a class="heading__link"  >Dánh sách thông tin các thẻ</a></p>
        </div>
        {{#if status}}
          {{#each inforThe}}
            <div class="cards">
              <div class="card card-1">
                <div class="card__icon">VISA</div>
                <p class="card__exit"><i class="fas fa-times"></i></p>
                <h2 class="card__title">{{this.SoThe}}</h2>
                <div class="w-100 d-flex justify-content-between">
                  <p class="card__apply text-light">{{this.CVV}}</p>
                  <p class="card__apply text-light">{{convertDate this.NgayHetHan}}</p>
                </div>
              </div>
            </div>
          {{/each}}
          {{else}}
            <div class="cards">
                <div class="card card-1">
                  <div class="card__icon">VISA</div>
                  <p class="card__exit"><i class="fas fa-times"></i></p>
                  <h2 class="card__title">xxxxxx</h2>
                  <div class="w-100 d-flex justify-content-between">
                    <p class="card__apply text-light">xxx</p>
                    <p class="card__apply text-light">xx/xx</p>
                  </div>
                </div>
              </div>
            {{/if}}

      </div>
    </div>
    <div class="col-lg-8 col-sm-12">
      <div id="container">
        <div id="info">
          <img id="product" src="https://www.paydollar.com.vn/en/images/creditcard-img1-vietnam.jpg" />
        </div>

        <div id="payment">

          <form id="checkout" onsubmit="return false" class="form-payment-card">
            <label>Số tiền cần nạp</label>
            <input id="cardnumber" type='number'  name="cardnumber" required placeholder="100.000 đ" >
            <label class="text-danger">Tối thiểu 50.000Đ</label>
            
            <button class="btn btn-payment">Nạp tiền</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    let formPaymentCard = document.getElementById('checkout')
    let soTien = document.getElementById('cardnumber')
    let btnPaymentCard = document.getElementsByClassName('btn-payment')


  formPaymentCard.addEventListener('submit', () => {
    const swalWithBootstrapButtons = Swal.mixin({
    customClass: {
      confirmButton: 'btn btn-success',
      cancelButton: 'btn btn-danger'
    },
    buttonsStyling: false
  })

  swalWithBootstrapButtons.fire({
    title: 'Bạn chắc chắn ?',
    text: "Nạp "+soTien.value+"đ vào tài khoản",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Xác nhận',
    cancelButtonText: 'Hủy',
    reverseButtons: true
  }).then((result) => {
    if (result.isConfirmed) {
      const dataMoney = {
        soTien: soTien.value
      }
      fetch('/apiUser/TTNapTien',{
        method: 'POST',
        body: JSON.stringify(dataMoney),
        headers: {'Content-Type': 'application/json'},
    }).then((res) => res.json())
        .then(data => {
            console.log(data)
            if(data.status == 'error') {
                Swal.fire({
                  position: 'center',
                  icon: 'error',
                  title: data.error,
                  showConfirmButton: false,
                  timer: 1500
                }).then(()=>{
                    //location.reload()
                })
            }else{
                Swal.fire({
                  position: 'center',
                  icon: 'success',
                  title: data.success,
                  showConfirmButton: false,
                  timer: 1500
                }).then(()=>{
                  window.location.replace('/')
                })
            }
        })
      
    } else if (
      /* Read more about handling dismissals below */
      result.dismiss === Swal.DismissReason.cancel
    ) {
      swalWithBootstrapButtons.fire(
        'Hủy Bỏ',
        'Đã hủy giao dịch ',
        'error'
      )
    }
  })
    
  })
  </script>
