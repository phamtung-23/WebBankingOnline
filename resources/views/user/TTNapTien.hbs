    }
     #checkout #date {
      width: 48%;
      float: left;
      margin-left: 11%;
    }
    #checkout .btn {
      background: #00b894;
      border: none;
      width: 100%;
      padding: 12px 10px 10px 10px;
      -webkit-border-radius: 50px;
      -moz-border-radius: 50px;
      -ms-border-radius: 50px;
      border-radius: 50px;
      text-transform: uppercase;
      letter-spacing: 2px;
